<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg"
    tools:context="com.example.administrator.testapp.controller.Register">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        style="@style/AppTheme.AppBarOverlay"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_register"
            app:title="手机号注册"
            app:titleTextColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:id="@+id/layout1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:textColor="#000000"
            android:textSize="@dimen/public_fontSize"
            android:layout_width="80dp"
            android:text="手机号"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_weight="1"
            android:textColor="#000000"
            android:textColorHint="@color/grey_deep"
            android:background="@drawable/border"
            android:textSize="@dimen/public_fontSize"
            android:id="@+id/phone"
            android:hint="请输入手机号/邮箱"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_EditText_height" />
    </LinearLayout>
    <View
        android:id="@+id/line1"
        android:layout_marginLeft="12dp"
        android:background="@color/grey_bg"
        app:layout_constraintTop_toBottomOf="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/line1"
        android:background="@color/white"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:id="@+id/layout2"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:textColor="#000000"
            android:textSize="@dimen/public_fontSize"
            android:layout_width="80dp"
            android:text="密码"
            android:layout_height="wrap_content" />
        <EditText
            android:textColor="#000000"
            android:textColorHint="@color/grey_deep"
            style="?android:attr/textViewStyle"
            android:textSize="@dimen/public_fontSize"
            android:background="@drawable/border"
            android:id="@+id/pwd"
            android:hint="6-16位字母/符号"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_EditText_height" />
    </LinearLayout>
    <View
        android:id="@+id/line2"
        android:layout_marginLeft="12dp"
        android:background="@color/grey_bg"
        app:layout_constraintTop_toBottomOf="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/line2"
        android:background="@color/white"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:id="@+id/layout3"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:textColor="#000000"
            android:textSize="@dimen/public_fontSize"
            android:layout_width="80dp"
            android:text="确认密码"
            android:layout_height="wrap_content" />
        <EditText
            android:textColor="#000000"
            android:textColorHint="@color/grey_deep"
            style="?android:attr/textViewStyle"
            android:textSize="@dimen/public_fontSize"
            android:background="@drawable/border"
            android:id="@+id/repwd"
            android:hint="确认密码"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_EditText_height" />
    </LinearLayout>

    <Button
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:id="@+id/rstBtn"
        android:background="@drawable/registerbtn"
        app:layout_constraintTop_toBottomOf="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:text="注册"
       />
</android.support.constraint.ConstraintLayout>
