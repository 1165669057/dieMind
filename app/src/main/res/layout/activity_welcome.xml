<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentView"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.testapp.WelcomeActivity">
     <ImageView
         android:id="@+id/middleimg"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintLeft_toLeftOf="parent"
         app:layout_constraintRight_toRightOf="parent"
         android:layout_width="100dp"
         android:layout_height="100dp"
         android:layout_marginBottom="100dp"
         android:src="@mipmap/openmind"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="@dimen/special_big_font"
        app:layout_constraintTop_toBottomOf="@+id/middleimg"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:text="hellow friend"
        />
</android.support.constraint.ConstraintLayout>
