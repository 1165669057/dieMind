<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="12dp"
    android:paddingTop="12dp"
    android:layout_marginRight="12dp"
    android:paddingBottom="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
   <ImageView
       android:id="@+id/leftimg"
       android:background="@mipmap/openmind"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@+id/leftimg"
        app:layout_constraintBottom_toBottomOf="@+id/leftimg"
        app:layout_constraintLeft_toRightOf="@+id/leftimg"
         android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/mytitle"
            android:textSize="@dimen/big_title_fontSize"
            android:textColor="#000000"
            android:text="我的标题"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/content"
            android:text="我的介绍一下在"
            android:textSize="@dimen/public_fontSize"
            android:textColor="@color/grey_deep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>